<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Purchase Order Updated</title>
</head>

<body style="margin:0; padding:0; background:#f5f7fa; font-family:Arial, Helvetica, sans-serif;">
    <table width="100%" cellpadding="0" cellspacing="0" style="padding:30px 0;">
        <tr>
            <td align="center">

                <table width="650" cellpadding="0" cellspacing="0"
                       style="background:#ffffff; border-radius:12px; overflow:hidden; box-shadow:0 4px 14px rgba(0,0,0,0.08);">

                    <!-- Header -->
                    <tr>
                        <td style="background:#0f62fe; padding:20px; color:#ffffff;">
                            <div style="font-size:20px; font-weight:bold;">Purchase Order Status Updated</div>
                            <div style="opacity:0.9; margin-top:4px;">PO ID: <strong>$purchaseOrderId</strong></div>
                        </td>
                    </tr>

                    <!-- Body -->
                    <tr>
                        <td style="padding:24px 28px;">

                            <div style="font-size:15px; font-weight:bold; color:#111827; margin-bottom:10px;">
                                Status Updated To:
                            </div>

                            ## Default color
                            #set( $color = "#6b7280" )
                            #if( $status == "Approved" )
                                #set( $color = "#10b981" )
                            #elseif( $status == "Rejected" )
                                #set( $color = "#ef4444" )
                            #elseif( $status == "Pending" )
                                #set( $color = "#f59e0b" )
                            #elseif( $status == "Partially Approved" )
                                #set( $color = "#f97316" )
                            #elseif( $status == "Waiting for Approval" )
                                #set( $color = "#3b82f6" )
                            #end

                            <span style="padding:8px 14px; border-radius:20px;
                                         background:rgba(0,0,0,0.06);
                                         color:$color; font-weight:bold; font-size:14px;">
                                $status
                            </span>

                            <!-- Approver section -->
                            <div style="margin-top:25px;">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td style="padding-bottom:14px;">
                                            <div style="font-size:14px; color:#374151;">Approved By</div>
                                            <div style="font-size:15px; font-weight:bold; color:#111827;">$approvedBy</div>
                                        </td>

                                        <td style="padding-bottom:14px; text-align:right;">
                                            <div style="font-size:14px; color:#374151;">Date</div>
                                            <div style="font-size:15px; font-weight:bold; color:#111827;">$approvalDate</div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Comments -->
                            #if($comments)
                            <div style="margin-top:20px; padding:14px; background:#fff7ed;
                                        border:1px solid #ffedd5; border-radius:8px;
                                        font-size:14px; color:#7c2d12;">
                                <strong>Comments:</strong>
                                <div style="margin-top:6px;">$comments</div>
                            </div>
                            #end

                            <!-- View Link -->
                            #if($viewLink)
                            <div style="margin-top:25px;">
                                <a href="$viewLink"
                                   style="padding:10px 16px; background:#0f62fe;
                                          color:#ffffff; text-decoration:none;
                                          font-weight:bold; border-radius:8px;">
                                    View Purchase Order
                                </a>
                            </div>
                            #end

                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="padding:16px 28px; background:#f8fafc;
                                   font-size:12px; color:#6b7280;">
                            This notification was generated on $currentDate.
                        </td>
                    </tr>

                </table>

            </td>
        </tr>
    </table>
</body>
</html>
